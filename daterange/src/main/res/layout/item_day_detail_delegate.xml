<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@drawable/selector_solid_ececec_00000000"
    android:minHeight="46dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/color_enable_cecece_normal_333333"
        android:textSize="14sp"
        tools:text="12" />

    <TextView
        android:id="@+id/tv_start_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_day"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:visibility="gone"
        tools:text="开始时间"
        tools:textColor="@color/color_333333"
        tools:visibility="visible" />

</RelativeLayout>


